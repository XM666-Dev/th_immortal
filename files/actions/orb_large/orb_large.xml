    <SpriteComponent
        image_file="mods/th_immortal/files/actions/orb_large/orb_large_inner.xml"
        emissive="1"
        offset_x="16"
        offset_y="16"
    />
    <SpriteComponent
        image_file="mods/th_immortal/files/actions/orb_large/orb_large_outline.png"
        additive="1"
        offset_x="16"
        offset_y="16"
    />

    <AudioComponent
        file="data/audio/Desktop/projectiles.bank"
        event_root="projectiles/orb_cursed"
    />

    <LightComponent
        radius="100"
        fade_out_time="0.3"
        r="255"
        g="255"
        b="255"
    />

    <VariableStorageComponent
        name="projectile_file"
        value_string="mods/th_immortal/files/actions/orb_large/orb_large.xml"
    />

    <GameAreaEffectComponent
        radius="12"
    />
